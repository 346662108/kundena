/* 文章公用头部 */

.nav {
  width: 100%;
  height: 84rpx;
  background: #fff;
  box-shadow: 4rpx 0px 20rpx rgba(0, 0, 0, 0.2);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 101;
}

.nav .nav-menu {
  height: 84rpx;
  font-size: 32rpx;
  color: #666;
}

.nav .nav-menu text {
  display: block;
  position: relative;
  margin-left: 35rpx;
  margin-right: 35rpx;
}

.nav .nav-menu view:last-child {
  padding-right: 60rpx;
}

.nav .nav-menu text.current {
  font-weight: 700;
  color: #000;
}

.nav .nav-menu text.current::after {
  content: "";
  position: absolute;
  left: 50%;
  bottom: -12rpx;
  transform: translateX(-50%);
  width: 28rpx;
  height: 4rpx;
  background: #e0197b;
  border-radius: 10rpx;
}

.nav-mask {
  width: 120rpx;
  height: 84rpx;
  background: linear-gradient(90deg, rgba(255, 255, 255, 0.25), rgba(255, 255, 255, 1) 60%, rgba(255, 255, 255, 1) 40%);
  position: fixed;
  top: 0;
  right: 0;
  z-index: 102;
}
