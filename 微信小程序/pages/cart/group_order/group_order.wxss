/* pages/cart/group_order/group_order.wxss */

page {
  background: #e8e8ed;
}

.icon {
  position: relative;
}

.icon:after {
  content: " ";
  display: inline-block;
  height: 20rpx;
  width: 20rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #747474;
  border-style: solid;
  -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 30rpx;
}

/*收货地址*/

.address {
  background: #fff;
}

.address1_icon {
  width: 35rpx;
  height: 35rpx;
  float: left;
}

.address .info {
  padding: 25rpx 50rpx 25rpx 20rpx;
}

.address .name {
  font-size: 32rpx;
  color: #333;
}

.address .text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-top: 10rpx;
}

.address .line {
  width: 100%;
  height: 8rpx;
}

.add {
  display: flex;
}

.add .add_icon {
  width: 80rpx;
  height: 80rpx;
  line-height: 75rpx;
  text-align: center;
  border-radius: 6rpx;
  font-size: 60rpx;
  font-weight: bold;
  color: #fff;
  background: #1aad19;
}

.add text {
  font-size: 28rpx;
  margin-left: 20rpx;
  line-height: 80rpx;
}

.select__offer {
  background: #fff;
  font-size: 28rpx;
  line-height: 88rpx;
}

.select__offer__title {
  padding: 0 25rpx;
  border-bottom: 1rpx solid #eee;
}

.select__offer__title text {
  color: #999;
  font-size: 24rpx;
  margin-left: 10rpx;
}

.select__offer__li {
  display: flex;
  padding-right: 20rpx;
  margin-left: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.select__offer__li:last-child {
  border: 0;
}

.select__offer__li .radio {
  width: 36rpx;
  height: 36rpx;
  background: #fff;
  border: 1rpx solid #ccc;
  border-radius: 100%;
  flex: none;
  margin-top: 25rpx;
}

.select__offer__li.select .radio {
  position: relative;
  background: #1aad19;
  border-color: #1aad19;
}

.select__offer__li.select .radio text {
  position: absolute;
  left: 12rpx;
  top: 4rpx;
  width: 10rpx;
  height: 20rpx;
  border: 0;
  border-right: 1px solid #fff;
  border-bottom: 1px solid #fff;
  transform: rotate(45deg);
  -webkit-transform: rotate(45deg);
  -moz-transform: rotate(45deg);
  -ms-transform: rotate(45deg);
}

.select__offer__li .name {
  flex: 1;
}

.select__offer__li .price {
  color: #666;
  padding-right: 20rpx;
  font-size: 24rpx;
}

.select__offer__li.select .price {
  font-size: 28rpx;
  color: #000;
}

/*购买数量控件 */

.attr_num_set {
  display: flex;
}

.attr_num_set text, .attr_num_set input {
  width: 80rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border: 1px solid #999;
  font-size: 28rpx;
}

.attr_num_set .plus {
  border-bottom-right-radius: 6rpx;
  border-top-right-radius: 6rpx;
  border-left: 0;
}

.attr_num_set .less {
  border-bottom-left-radius: 6rpx;
  border-top-left-radius: 6rpx;
  border-right: 0;
}

.attr_num_set input {
  color: #333;
}

.attr_num_set .normal {
  color: #666;
  background: #fff;
}

.attr_num_set .disabled {
  color: #bbb;
  background: #f8f8f8;
  border-color: #ccc;
}

.confirm_msg_txt {
  line-height: 100rpx;
}

.confirm_msg_r {
  display: -webkit-box;
  display: box;
  display: -moz-box;
  display: -ms-flexbox;
  display: -o-box;
  -webkit-box-align: center;
  -moz-box-align: center;
  -o-box-align: center;
  -ms-box-align: center;
  box-align: center;
  -ms-flex-align: center;
}

.confirm_list {
  padding: 5rpx 0 5rpx 20rpx;
}
