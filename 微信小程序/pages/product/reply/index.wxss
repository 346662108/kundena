/* pages/product/reply/index.wxss */

page {
  width: 100%;
  height: 100%;
  background: #f7f7fa;
  font-size: 26rpx;
  color: #273e57;
}

.reply-items {
  padding: 20rpx;
  background: #fff;
  border-bottom: 1rpx solid rgba(39, 62, 87, 0.15);
}

.reply-items .items-Q-header, .reply-items .items-A-body {
  display: flex;
  font-size: 24rpx;
  line-height: 36rpx;
  color: #3985ff;
}

.reply-items .items-A-body {
  padding-top: 10rpx;
}

.reply-items .operating {
  position: relative;
  padding-right: 15rpx;
  flex: 1;
  text-align: right;
}

.reply-items .operating::after {
  border-color: #3985ff;
  right: 0;
}

.reply-items .date {
  font-size: 22rpx;
  color: rgba(39, 62, 87, 0.5);
  padding-left: 40rpx;
}

.reply-items  .text, .reply-main .main-problem .text {
  padding-left: 40rpx;
  font-size: 28rpx;
  word-break: break-all;
}

.reply-items .items-Q-body .text, .reply-main .main-problem .text {
  font-weight: 700;
}

.reply-items  .text::before, .reply-main .main-problem .text::before {
  display: inline-block;
  vertical-align: middle;
  margin: 0 10rpx 0 -40rpx;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  border-radius: 4rpx;
  text-align: center;
  color: #fff;
  font-weight: 400;
  overflow: hidden;
}

.reply-items .items-Q-body .text::before,
.reply-main .main-problem .text::before {
  content: "Q";
  background: #3985ff;
}

.reply-items .items-A-header .text::before {
  content: "A";
  background: #18c461;
}

.reply-problem .reply-items {
  padding: 30rpx 20rpx;
  border-bottom: 0;
}

.reply-list .list-title {
  display: flex;
  padding: 0 20rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-weight: 700;
}

.reply-list .list-title .num {
  flex: 1;
  text-align: right;
  font-size: 22rpx;
  font-weight: 400;
  color: rgba(39, 62, 87, 0.5);
}

.reply-list .reply-items:last-child {
  border-bottom: 0;
}

.reply-btns-fixed {
  position: fixed;
  right: 30rpx;
  bottom: 200rpx;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background: linear-gradient(90deg, #70a1f0, #3985ff);
  box-shadow: rgba(57, 133, 255, 0.35) 0px 2px 6px;
  line-height: 1.25;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
}

.reply-btns-fixed text {
  display: block;
}

.reply-btns-fixed text.desc {
  margin-top: 18rpx;
}

.layer-mini {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 101;
  width: 642rpx;
  background: #fff;
  border-radius: 16rpx;
}

.reply-main {
  padding: 30rpx 30rpx 0;
  font-size: 28rpx;
}

.reply-main .main-textarea textarea {
  margin-top: 20rpx;
  width: 550rpx;
  height: 160rpx;
  padding: 10rpx 15rpx;
  background: #f7f7fa;
  border: 1rpx solid rgba(39, 62, 87, 0.08);
  border-radius: 16rpx;
  line-height: 40rpx;
}

.reply-main .main-textarea .reply-btns {
  display: flex;
  width: 642rpx;
  height: 111rpx;
  margin: 60rpx -30rpx 0;
  border-top: 1rpx solid rgba(39, 62, 87, 0.15);
}

.reply-main .main-textarea .reply-btns button {
  flex: 1;
  background: transparent;
  border: 0;
  line-height: 111rpx;
  text-align: center;
  font-size: 34rpx;
  font-weight: 700;
  color: #273e57;
}

.reply-main .main-textarea .reply-btns button::after {
  display: none;
}

.reply-main .main-textarea .reply-btns button.blue {
  color: #3985ff;
  border-left: 1rpx solid rgba(39, 62, 87, 0.15);
}
