/* pages/product/classify/index.wxss */

page {
  overflow-y: hidden;
}

.nav-classify {
  position: relative;
  width: 100%;
}

.nav-left {
  position: absolute;
  top: 0;
  left: 0;
  width: 180rpx;
}

.nav-left .nav-left-items {
  height: 100rpx;
  background: #fff;
}

.nav-left .nav-left-items.active {
  position: relative;
  background: #f2f2f2;
  color: #e0197b;
  font-weight: 700;
  border-top-left-radius: 16rpx;
  border-bottom-left-radius: 16rpx;
}

.nav-left .nav-left-items.active::after {
  position: absolute;
  left: 20rpx;
  top: 50%;
  margin-top: -9rpx;
  content: "";
  width: 8rpx;
  height: 18rpx;
  background: #e0197b;
  border-radius: 8rpx;
}

.nav-left .nav-left-items.prevActive {
  border-bottom-right-radius: 16rpx;
}

.nav-left .nav-left-items.nextActive {
  border-top-right-radius: 16rpx;
}

.nav-right {
  position: absolute;
  top: 0;
  left: 204rpx;
  right: 24rpx;
  width: 522rpx;
}

.nav-right .nav-right-title {
  margin-top: 36rpx;
  font-weight: 700;
}

.nav-right .nav-right-box {
  display: flex;
  flex-wrap: wrap;
  margin: 20rpx 0 36rpx;
  background: #fff;
  border-radius: 16rpx;
}

.nav-right .nav-right-items {
  padding: 20rpx;
}

.nav-right .nav-right-items image {
  width: 134rpx;
  height: 134rpx;
  border-radius: 12rpx;
}

.nav-right .nav-right-items text {
  display: block;
  margin-top: 10rpx;
  width: 134rpx;
  text-align: center;
  font-size: 24rpx;
  font-weight: 300;
}
