/* pages/product/list/index.wxss */

/*筛选*/

.filter-item {
  width: 160rpx;
  height: 64rpx;
  background: #f9f9f9;
}

.filter-item icon {
  margin-left: 8rpx;
  width: 20rpx;
  height: 20rpx;
  background-image: url('data:image/png;base64,');
  background-size: 20rpx auto;
}

.filter-item.arrow-first .icon {
  background-position: -1rpx -1rpx;
}

.filter-item.arrow-down .icon {
  background-position: -1rpx -29rpx;
}

.filter-item.arrow-up .icon {
  background-position: -1rpx -57rpx;
}

/*商品列表*/

.nav-section-list {
  margin-top: 278rpx;
}

.nav-section-items {
  width: 370rpx;
}

.nav-section-items:nth-child(2n) {
  margin-left: 10rpx;
}

.section-image image {
  width: 370rpx;
  height: 370rpx;
}