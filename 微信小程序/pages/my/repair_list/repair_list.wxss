/* pages/my/repair_list/repair_list.wxss */

page {
  font-size: 26rpx;
}

.nav-section-items {
  margin-left: 25rpx;
  margin-right: 25rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.section-hd {
  padding: 0 25rpx;
  height: 80rpx;
}

.section-md {
  padding: 20rpx;
}

.section-md:last-child::after {
  border: 0;
}

.section-md .pic {
  position: relative;
  width: 186rpx;
  height: 186rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.section-md .pic image {
  width: 100%;
  height: 100%;
}

.section-md .pic text {
  width: 100%;
  height: 36rpx;
  line-height: 36rpx;
  background-color: rgba(0, 0, 0, 0.8);
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 2;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
}

.section-md .info {
  margin-left: 20rpx;
}

.section-md .title {
  line-height: 36rpx;
}

.section-md .btn {
  margin-left: 20rpx;
  width: 156rpx;
  height: 54rpx;
  font-size: 24rpx;
}
